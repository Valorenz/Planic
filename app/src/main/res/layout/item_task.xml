<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#F5FAFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Gambar Tugas -->
        <ImageView
            android:id="@+id/taskImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/gambar1"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:background="@drawable/image_round_background" />

        <!-- Konten Teks -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Judul Tugas -->
            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contoh Judul Tugas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Deskripsi -->
            <TextView
                android:id="@+id/taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi singkat tentang tugas yang harus diselesaikan."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />

            <!-- Waktu atau Deadline -->
            <TextView
                android:id="@+id/taskTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deadline: 30 Mei 2025, 14:00 WIB"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
